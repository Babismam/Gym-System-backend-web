<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
                                 https://jakarta.ee/xml/ns/persistence/persistence_3_2.xsd"
             version="3.1">

    <persistence-unit name="GymPU" transaction-type="JTA">
        <jta-data-source>java:jboss/datasources/GymDS</jta-data-source>

        <class>com.example.gymmanagement.entities.User</class>
        <class>com.example.gymmanagement.entities.Program</class>
        <class>com.example.gymmanagement.entities.Attendance</class>
        <class>com.example.gymmanagement.entities.MemberProgram</class>
        <class>com.example.gymmanagement.entities.RolePermission</class>
        <class>com.example.gymmanagement.entities.Schedule</class>
        <class>com.example.gymmanagement.entities.TrainerSchedule</class>

        <properties>
            <property name="jakarta.persistence.schema-generation.database.action" value="update"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
